<tool id='Matthew.Shaxted_interactive_session' name='Matthew.Shaxted_interactive_session'>
  <command interpreter='bash'>main.sh</command>
  <inputs>
  <param name='service_name' label='Service' type='hidden' value='openvscode' width='50%_none'></param>
  <param name='install_dir' label='Default OpenVSCode installation directory' type='hidden' value='__poolworkdir__/pw/bootstrap/code-server-4.7.0-linux-amd64' width='50%_none'></param>
  <param name='tgz_path' label='Path to bootstrap TGZ' type='hidden' value='/swift-pw-bin/apps/code-server-4.7.0-linux-amd64.tar.gz' width='50%_none'></param>
    <section name='service_sec' type='section' title='OpenVSCode Settings' expanded='true'>
        <param name='password' label='Password for IDE session' type='text' value='' help='Enter password or leave blank for no password' width='50%_none'></param>
        <param name='server_dir' label='Directory to open in VS code' type='text' value='~/' help='' width='50%_none'></param>
        <param name='github_token' label='GitHub authentication token (optional)' type='text' value='' help='' width='50%_none'></param>
   </section>
    <section name='host' type='section' title='Server Host' expanded='true'>
      <conditional name="jobschedulertype_cond">
          <param name='jobschedulertype' type='select' label='Select Controller, SLURM Partition or PBS Queue' help='Job will submitted using SSH, sbatch or qsub, respectively' width='50%_none' multiple='false'>
            <option value="CONTROLLER" selected="true">Controller</option>
            <option value="SLURM">SLURM</option>
            <option value="PBS">PBS</option>
        </param>
        <when value="SLURM">
            <param name='scheduler_directives' label='Scheduler directives' type='text' help='e.g. ;--mem=1000;--gpus-per-node=1 - Use the semicolon character ; before each parameter. Do not include the SBATCH keyword.' value=';--time=00:20:00;--nodes=1;--exclusive' width='100%_none'>
            </param>
        </when>
        </conditional>
    </section>
    <section name='advanced_options_other' type='section' title='Advanced Options' expanded='false'>
        <param name="stream" type="boolean" truevalue="Yes" falsevalue="No" checked="False" label="Stream slurm output?" help='Select Yes to stream the slurm output from the execution host to the job directory in PW' width="25%_none" optional='true' float="right">
        </param>
    </section>
  </inputs>
  <outputs>
  </outputs>
</tool>
