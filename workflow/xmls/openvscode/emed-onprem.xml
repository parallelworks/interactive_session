<tool id='NA' name='NA'>
  <command interpreter='bash'>main.sh</command>
  <cancel interpreter='bash'>kill.sh</cancel>
  <inputs>
    <param 
      name='advanced_options_stream' 
      label='Stream slurm output?' 
      type='hidden' 
      value='false'
    ></param>
    <section name='service' type='section' title='OpenVSCode Settings' expanded='true'>
        <param 
          name='install_dir' 
          label='Default OpenVSCode installation directory' 
          type='hidden' 
          value='__WORKDIR__/pw/bootstrap/code-server-4.7.0-linux-amd64'  
        ></param>
        <param 
          name='tgz_path' 
          label='Path to bootstrap TGZ' 
          type='hidden' 
          value='/swift-pw-bin/apps/code-server-4.7.0-linux-amd64.tar.gz'  
        ></param>
        <param 
          name='exec' 
          label='Service' 
          type='hidden' 
          value=''  
        ></param>
        <param 
          name='name' 
          label='Service' 
          type='hidden' 
          value='openvscode'  
        ></param>
        <param 
          name='password' 
          label='Password for IDE session' 
          type='text' 
          value='' 
          help='Enter password or leave blank for no password'
          optional='true'
        ></param>
        <param 
          name='directory' 
          label='Directory to open in VS code' 
          type='text' 
          value='~/' 
          help=''  
        ></param>
        <param 
          name='github_token' 
          label='GitHub authentication token' 
          type='text' 
          value='' 
          help=''
          optional='true'  
        ></param>
   </section>
    <section name='pwrl_host' type='section' title='Server Host' expanded='true'>
      <param 
	      name='resource' 
	      type='computeResource' 
	      label='Service host' 
        hideUserWorkspace='true' 
	      help='Resource to host the service'
	      hideDisconnectedResources='false'
      ></param>
      <param 
        name='nports' 
        label='Number of Ports to Reserve' 
        type='hidden' 
        value='1'  
      ></param> 
      <param 
        name='jobschedulertype' 
        label='Select Controller, SLURM Partition or PBS Queue' 
        type='hidden' 
        value='SLURM'
      ></param>
      <param 
        name='_sch__dd_partition_e_' 
        label='SLURM partition' 
        type='text' 
        help='Partition to submit the interactive job. Leave empty to let SLURM pick the optimal option.' 
        value=''
        optional='true'  
      ></param>
      <param 
        name='_sch__dd_cpus_d_per_d_task_e_' 
        label='CPUs per task' 
        type='integer' 
        min="1" 
        max="10" 
        help='--cpus-per-task=value slurm directive' 
        value='1'
      ></param>
      <param 
        name='_sch__dd_mem_d_per_d_cpu_e_' 
        label='Minimum memory required per usable allocated CPU' 
        type='text' 
        help='--mem-per-cpu=value slurm directive' 
        value='8G'
        optional='true'  
      ></param>   
      <param 
        name='_sch__dd_time_e_' 
        label='Walltime' 
        type='text' 
        help='e.g. 01:00:00 - Amount of time slurm will honor the interactive session.' 
        value='01:00:00'
        optional='true'  
      ></param>
      <param 
        name='scheduler_directives' 
        label='Scheduler directives' 
        type='text' 
        help='e.g. --mem=1000;--gpus-per-node=1 - Use the semicolon character ; to separate parameters. Do not include the SBATCH keyword.' 
        value=''
        optional='true'  
      ></param>
    </section>
  </inputs>
  <outputs>
  </outputs>
</tool>
