<tool id='NA' name='NA'>
  <command interpreter='bash'>main.sh</command>
  <cancel interpreter='bash'>kill.sh</cancel>
  <inputs>
    <param name='novnc_dir' label='Default noVNC installation directory' type='hidden' value='__WORKDIR__/pw/bootstrap/noVNC-1.3.0' width='50%_none'></param>
    <param name='novnc_tgz' label='Path to noVNC TGZ' type='hidden' value='/swift-pw-bin/apps/noVNC-1.3.0.tgz' width='50%_none'></param>
    <section name='service' type='section' title='Service Inputs' expanded='false'>
      <param name='name' label='Service' type='hidden' value='turbovnc' width='50%_none'></param>
      <param name='slurm_module' label='Module name' type='text' help='Module to load with [module load]' value='forge' width='50%_none'></param>
      <param name='bin' label='Launch command' type='text' value='forge' help='' width='50%_none'></param>
      <param name='vnc_exec' label='Path to vncserver' type='hidden' value='/opt/TurboVNC/bin/vncserver' width='50%_none'></param>
    </section>
    <section name='pwrl_host' type='section' title='ARM Forge DDT and MAP' expanded='true'>
      <param name='resource' type='computeResource' label='Service host' hideUserWorkspace='true' help='Resource to host the service'></param>
      <param name='nports' label='Number of Ports to Reserve' type='hidden' value='1' width='50%_none'></param> 
      <conditional name="jobschedulertype_cond">
          <param name='jobschedulertype' type='select' label='Select Controller, SLURM Partition or PBS Queue' help='Job will submitted using SSH, sbatch or qsub, respectively' width='50%_none' multiple='false'>
            <option value="CONTROLLER">Controller</option>
            <option value="SLURM" selected="true">SLURM Partition</option>
        </param>
        <when value="SLURM">
            <param name='_sch__dd_account_e_' label='SLURM account' type='text' help='Account to submit the interactive job' value='nesccmgmt' width='50%_none'>
            </param>
            <param name='_sch__dd_partition_e_' label='SLURM partition' type='text' help='Partition to submit the interactive job. Leave empty to let SLURM pick the optimal option.' value='' width='50%_none'>
            </param>
            <param name='scheduler_directives' label='Scheduler directives' type='text' help='e.g. --mem=1000;--gpus-per-node=1 - Use the semicolon character ; to separate parameters. Do not include the SBATCH keyword.' value='--time=00:45:00;--nodes=1;--exclusive' width='100%_none'>
            </param>
        </when>
      </conditional>
    </section>
    <section name='advanced_options' type='section' title='Advanced Options' expanded='false'>
        <param name="stream" type="boolean" truevalue="Yes" falsevalue="No" checked="False" label="Stream slurm output?" help='Select Yes to stream the slurm output from the execution host to the job directory in PW' width="25%_none" optional='true' float="right">
        </param>
    </section>
  </inputs>
  <outputs>
  </outputs>
</tool>
