<tool id='Matthew.Shaxted_interactive_session' name='Matthew.Shaxted_interactive_session'>
  <command interpreter='bash'>main.sh</command>
  <cancel interpreter='bash'>kill.sh</cancel>
  <inputs>
    <param name='service_name' label='Service Name' type='hidden' value='nicedcv' width='50%_none'></param>
    <param name='servicePort' label='Service Port' type='hidden' value='8443' width='50%_none'></param>
    <param name='service_display' label='Service Display' type='hidden' value='1' width='50%_none'></param>
    <param name='service_is_running' label='Service Is Running' type='hidden' value='True' width='50%_none'></param>
    <param name='service_slurm_module' label='Module name' type='text' help='Module to load with [module load], e.g.: starccm, starccm/2210 or starccm/2306' value='starccm' width='50%_none'></param>
    <param name='service_bin' label='StarCCM+ Launch Command' type='text' value='starccm+' help='Command to start the StarCCM+ GUI' width='50%_none'></param>
    <section name='pwrl_host' type='section' title='Desktop Host' expanded='true'>
      <param name='resource' type='computeResource' label='Service host' hideUserWorkspace='true' help='Resource to host the service'></param>
      <param name='nports' label='Number of Ports to Reserve' type='hidden' value='1' width='50%_none'></param> 
      <param name='jobschedulertype' label='Service Scheduler Type' type='hidden' value='SLURM' width='50%_none'></param>
      <param name='_sch__dd_partition_e_' label='Service Partition' type='hidden' value='vnc' width='50%_none'></param>
      <param name='scheduler_directives' label='Service Directives' type='hidden' value='--exclusive' width='50%_none'></param>
    </section>
    <section name='advanced_options' type='section' title='Advanced Options' expanded='false'>
        <param name="stream" type="boolean" truevalue="Yes" falsevalue="No" checked="False" label="Stream slurm output?" help='Select Yes to stream the slurm output from the execution host to the job directory in PW' width="25%_none" optional='true' float="right">
        </param>
    </section>
  </inputs>
  <outputs>
  </outputs>
</tool>